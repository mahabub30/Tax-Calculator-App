<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/income2"
    android:orientation="vertical"
    tools:context=".TaxCalculator"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="Tax Calculator"
        android:fontFamily="@font/osworld"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        />


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="100dp"
       >

       <TextView
           android:layout_width="170dp"
           android:layout_height="wrap_content"
           android:text="Annual Basic Pay :"
           android:textColor="#000000"
           android:textSize="15sp"
           android:fontFamily="@font/osworld"
           android:textStyle="bold"
           android:layout_marginLeft="5dp"

           />

       <EditText
           android:id="@+id/edBasicpay"
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:ems="10"
           android:hint="Basic Pay"
           android:background="@drawable/custom_input"
           android:textColorHint="#6C6666"
           android:textColor="#000000"
           android:paddingStart="12dp"
           android:paddingEnd="12dp"
           android:textSize="15sp"
           android:inputType="numberDecimal"
           android:layout_marginRight="15dp"
           />




   </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        >

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Medical Allowance :"
            android:textColor="#000000"
            android:textSize="15sp"
            android:fontFamily="@font/osworld"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"

            />

        <EditText
            android:id="@+id/edMedical"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="Medical Allowance"
            android:background="@drawable/custom_input"
            android:textColorHint="#6C6666"
            android:textColor="#000000"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textSize="15sp"
            android:inputType="numberDecimal"
            android:layout_marginRight="15dp"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        >

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Bonus :"
            android:textColor="#000000"
            android:textSize="15sp"
            android:fontFamily="@font/osworld"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"

            />

        <EditText
            android:id="@+id/edBonus"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="Bonus"
            android:background="@drawable/custom_input"
            android:textColorHint="#6C6666"
            android:textColor="#000000"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textSize="15sp"
            android:inputType="numberDecimal"
            android:layout_marginRight="15dp"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        >

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Other Sources :"
            android:textColor="#000000"
            android:textSize="15sp"
            android:fontFamily="@font/osworld"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"

            />

        <EditText
            android:id="@+id/edOthersource"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="Other Sources"
            android:background="@drawable/custom_input"
            android:textColorHint="#6C6666"
            android:textColor="#000000"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textSize="15sp"
            android:inputType="numberDecimal"
            android:layout_marginRight="15dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        >

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Deduction :"
            android:textColor="#000000"
            android:textSize="15sp"
            android:fontFamily="@font/osworld"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"

            />

        <EditText
            android:id="@+id/edDeduction"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="Deduction"
            android:background="@drawable/custom_input"
            android:textColorHint="#6C6666"
            android:textColor="#000000"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textSize="15sp"
            android:inputType="numberDecimal"
            android:layout_marginRight="15dp"
            />




    </LinearLayout>



    ---------------------------------------------------------------------------------
<Button
    android:id="@+id/buttonCal"
    android:layout_width="170dp"
    android:layout_height="60dp"
    android:text="Calculate Tax"
    android:layout_marginLeft="105dp"
    android:layout_marginTop="20dp"
    android:backgroundTint="#F44336"
    android:textSize="10sp"
    android:textColor="#ffffff"
    android:textStyle="bold"
    android:fontFamily="@font/osworld"
    />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="#FF3F31"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:text="Gross Income    :"
                android:fontFamily="@font/osworld"

                />

            <TextView
                android:id="@+id/grossResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:fontFamily="@font/osworld"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"

                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:text="Taxable Income :"
                android:fontFamily="@font/osworld"

                />

            <TextView
                android:id="@+id/taxableResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:fontFamily="@font/osworld"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"

                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:text="Payable Tax       :"
                android:fontFamily="@font/osworld"

                />

            <TextView
                android:id="@+id/taxResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:fontFamily="@font/osworld"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"

                />

        </LinearLayout>











    </LinearLayout>



</LinearLayout>